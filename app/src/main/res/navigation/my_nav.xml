<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homePage">

    <fragment
        android:id="@+id/studentsList"
        android:name="com.example.teacher_helper.fragments.list.StudentsList"
        android:label="Students list"
        tools:layout="@layout/fragment_students_list">
        <action
            android:id="@+id/action_studentsList_to_addStudent2"
            app:destination="@id/addStudent" />
        <action
            android:id="@+id/action_studentsList_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_studentsList_to_addStudentSubjectRelation2"
            app:destination="@id/addStudentSubjectRelation2" />
        <action
            android:id="@+id/action_studentsList_to_subjectsList"
            app:destination="@id/subjectsList" />
        <argument
            android:name="viewType"
            app:argType="string"
            android:defaultValue="allStudents" />
        <argument
            android:name="subjectId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
    <fragment
        android:id="@+id/addStudent"
        android:name="com.example.teacher_helper.fragments.add.AddStudent"
        android:label="Add Student"
        tools:layout="@layout/fragment_add_student">
        <action
            android:id="@+id/action_addStudent2_to_studentsList"
            app:destination="@id/studentsList" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.teacher_helper.fragments.update.UpdateStudent"
        android:label="UpdateStudent"
        tools:layout="@layout/fragment_update_student">
        <action
            android:id="@+id/action_updateFragment_to_studentsList"
            app:destination="@id/studentsList" />
        <argument
            android:name="currentStudent"
            app:argType="com.example.teacher_helper.data.entities.Student" />
    </fragment>
    <fragment
        android:id="@+id/homePage"
        android:name="com.example.teacher_helper.HomePage"
        android:label="Asystent Nauczyciela"
        tools:layout="@layout/fragment_home_page">
        <action
            android:id="@+id/action_homePage_to_studentsList"
            app:destination="@id/studentsList" />
        <action
            android:id="@+id/action_homePage_to_subjectsList"
            app:destination="@id/subjectsList" />
    </fragment>
    <fragment
        android:id="@+id/subjectsList"
        android:name="com.example.teacher_helper.fragments.list.SubjectsList"
        android:label="fragment_subjects_list"
        tools:layout="@layout/fragment_subjects_list" >
        <action
            android:id="@+id/action_subjectsList_to_addSubject"
            app:destination="@id/addSubject" />
        <action
            android:id="@+id/action_subjectsList_to_studentsList"
            app:destination="@id/studentsList" />
        <argument
            android:name="viewType"
            android:defaultValue="allSubjects"
            app:argType="string" />
        <argument
            android:name="studentId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
    <fragment
        android:id="@+id/addSubject"
        android:name="com.example.teacher_helper.fragments.add.AddSubject"
        android:label="fragment_add_subject"
        tools:layout="@layout/fragment_add_subject" >
        <action
            android:id="@+id/action_addSubject_to_subjectsList"
            app:destination="@id/subjectsList" />
    </fragment>
    <fragment
        android:id="@+id/addStudentSubjectRelation2"
        android:name="com.example.teacher_helper.fragments.add.AddStudentSubjectRelation"
        android:label="AddStudentSubjectRelation" >
        <action
            android:id="@+id/action_addStudentSubjectRelation2_to_studentsList"
            app:destination="@id/studentsList" />
        <argument
            android:name="studentSubject"
            app:argType="string" />
    </fragment>
</navigation>